        <property name="phase" ref="hyperionDeletePhase"/>
        <property name="executor" ref="hyperionDeleteTpExecutor"/>
    </bean>

    <bean id="hyperionDeleteTpExecutor" class="java.util.concurrent.ThreadPoolExecutor" destroy-method="shutdown">
