        <constructor-arg value="${pipeline.getPhase.maxThreads}"/>
        <constructor-arg value="60"/>
        <constructor-arg value="SECONDS"/>
        <constructor-arg>
            <bean class="java.util.concurrent.LinkedBlockingQueue">
